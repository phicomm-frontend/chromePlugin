{
  "manifest_version": 2,
  "name": "Phicomm App Navigation",
  "description": "",
  "version": "1.0",
  "icons": {
    "128": "images/nav128.png",
    "16": "images/nav16.png",
    "48": "images/nav48.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/nav128.png",
      "38": "images/nav128.png"
    },
    "default_title": "phicomm"
  },
  "background": {
    "persistent": true,
    "scripts": [ "background.js" ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "contextMenus", // 右键菜单
    "tabs", // 标签
    "notifications", // 通知
    "webRequest", // web请求
    "webRequestBlocking", // 阻塞式web请求
    "storage", // 插件本地存储
    "https://ajax.googleapis.com/",
    "http://*/*",
    "https://*/*"
  ],
  "chrome_url_overrides" : {
    "newtab": "newtab.html"
  }
}
